<h1>New entry</h1>

<% form_for [@event, @entry] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :handle_name %><br />
    <%= f.text_field :handle_name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :present_id %><br />
    <%= f.select :present_id, @event.presents.map {|p| [p.name, p.id]}  %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.label :entered_at %><br />
    <%= f.datetime_select :entered_at %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

