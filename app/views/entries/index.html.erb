<h1>Listing entries</h1>

<table>
  <tr>
    <th>Handle name</th>
    <th>Email</th>
    <th>Present</th>
    <th>Comment</th>
    <th>Entered at</th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%=h entry.handle_name %></td>
    <td><%=h entry.email %></td>
    <td><%=h entry.present.try :name %></td>
    <td><%=h entry.comment %></td>
    <td><%=h entry.entered_at %></td>
    <td><%= link_to 'Show', [@event, entry] %></td>
    <td><%= link_to 'Edit', edit_event_entry_path(@event, entry) %></td>
    <td><%= link_to 'Destroy', [@event, entry], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New entry', new_event_entry_path(@event) %>
